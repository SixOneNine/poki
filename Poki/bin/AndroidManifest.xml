            android:name="gdcc.maketubo.activity.MenuActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="gdcc.maketubo.activity.GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name="gdcc.maketubo.activity.ConfigActivity"
            android:label="@string/title_activity_config" >
        </activity>
        <activity
            android:name="gdcc.maketubo.activity.RecordActivity"
            android:label="@string/title_activity_record" >
        </activity>
        <activity
            android:name="gdcc.maketubo.activity.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
    </application>

</manifest>
