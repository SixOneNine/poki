<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game"
    tools:context="gdcc.maketubo.activity.GameActivity" >

      <ImageView
        android:id="@+id/hole22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hole12"
        android:layout_below="@+id/hole12"
        android:layout_marginTop="49dp"
        android:src="@drawable/hole" />

    <ImageView
        android:id="@+id/hole23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/hole12"
        android:layout_marginRight="14dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/hole" />

    <ImageView
        android:id="@+id/hole11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/hole12"
        android:layout_marginLeft="20dp"
        android:src="@drawable/hole" />

    <ImageView
        android:id="@+id/hole13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hole23"
        android:layout_alignLeft="@+id/hole23"
        android:src="@drawable/hole" />

    <ImageView
        android:id="@+id/hole31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hole21"
        android:layout_below="@+id/hole23"
        android:layout_marginTop="43dp"
        android:src="@drawable/hole" />

    <ImageView
        android:id="@+id/hole32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hole22"
        android:layout_alignTop="@+id/hole31"
        android:src="@drawable/hole" />

    <ImageView
        android:id="@+id/hole33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hole23"
        android:layout_alignTop="@+id/hole32"
        android:src="@drawable/hole" />

    <ImageView
        android:id="@+id/hole21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hole11"
        android:layout_alignTop="@+id/hole22"
        android:src="@drawable/hole" />  

    <Button
        android:id="@+id/btnpause"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/set"
        android:text="暂停"
        android:onClick="gamePause" />

    <TextView
        android:id="@+id/textgrade"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:layout_alignBaseline="@+id/btnpause"
        android:layout_alignBottom="@+id/btnpause"
        android:layout_marginLeft="62dp"
        android:layout_toRightOf="@+id/btnpause"
        android:text="分数："
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/grade"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:layout_alignBaseline="@+id/textgrade"
        android:layout_alignBottom="@+id/textgrade"
        android:layout_toRightOf="@+id/textgrade"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="101dp"
        android:layout_height="68dp"
        android:layout_alignLeft="@+id/textgrade"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="14dp"
        android:text="30"
        android:textColor="#000000"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/hole12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:src="@drawable/hole" />

    <ImageView
        android:id="@+id/apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/grade"
        android:layout_toRightOf="@+id/time"
        android:src="@drawable/apple1" />

</RelativeLayout>